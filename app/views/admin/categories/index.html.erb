<section class="admin-categories-index">
<h1>Admin &raquo; All Categories</h1>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>


</section>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Products</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
<% @categories.each do |category| %>
  <tr>
    <td>
      <p><%=category.products.length %> products in this category</p>
      <%= select_tag "product names", options_for_select(category.prod_in_category), class: "btn btn-secondary dropdown-toggle" %>
    </td>
    <td>
      <%= category.name %>
    </td>
  </tr>
<% end %>

  </tbody>
</table>


