
<h1>Admin Dashboard</h1>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Total products</h5>
        <p class="card-text">There are currently <%=@products%> items listed on this site</p>
          <%= link_to "View Products", root_path, class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Total categories</h5>
      <p class="card-text">The products are sorted in <%=@categories%> categories</p>
            <% @cat.each do |category| %>
        <ul>
          <%= link_to category.name, category_path(category.id), class: 'btn btn-lg btn-primary' %>
        </ul>
        <%end%>
      </div>
    </div>
  </div>
</div>

